{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2015",
    "allowJs": false,
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./demo",
    "./test"
  ]
}
